<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_height"
    android:clickable="true"
    android:gravity="center_vertical"
    android:padding="@dimen/nav_drawer_padding">

    <ImageView
        android:id="@+id/img_icon"
        android:layout_width="@dimen/itemdraw.width"
        android:layout_height="@dimen/itemdraw.height" />

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/nav_drawer.tv.paddingLeft"
        android:textColor="@color/nav_draw_row"
        android:textSize="@dimen/button.textsize.18sp" />
</LinearLayout>