<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.asiantech.membersmanager.views.CircleImageView
                    android:id="@+id/imgAvataDetailHot"
                    android:layout_width="@dimen/circleImageview.width.height"
                    android:layout_height="@dimen/circleImageview.width.height"
                    android:src="@drawable/p1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/rl.maginleft.detail"
                    android:layout_toRightOf="@+id/imgAvataDetailHot">

                    <TextView
                        android:id="@+id/tvSenderDetailHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color.black" />

                    <TextView
                        android:id="@+id/tvTimeDetailHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSenderDetailHot"
                        android:textSize="@dimen/text.size.12sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvViewDetailsHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTimeDetailHot"
                        android:text="@string/tv.ViewDetails"
                        android:textColor="@color/color.blue"
                        android:textSize="@dimen/text.size.12sp"
                        android:textStyle="italic" />

                    <RelativeLayout
                        android:id="@+id/rlViewDetailsHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvViewDetailsHot"
                        android:layout_marginTop="@dimen/rl.magintop.detail.viewdetail"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvFromHot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv.from"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvMailSenderDetailHot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tvFromHot"
                            android:text="@string/tv.mail"
                            android:textColor="@color/color.blue"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvToHot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvFromHot"
                            android:text="@string/tv.to"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvMailReceiveDetailHot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMailSenderDetailHot"
                            android:layout_toRightOf="@+id/tvToHot"
                            android:text="@string/tv.mail"
                            android:textColor="@color/color.blue"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvDateHot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvToHot"
                            android:text="@string/tv.date"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvTimeDetail1Hot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMailReceiveDetailHot"
                            android:layout_toRightOf="@+id/tvDateHot"
                            android:textSize="@dimen/text.size.12sp" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvContentDetailHot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv.magintop.content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>