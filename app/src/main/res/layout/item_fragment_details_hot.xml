<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.asiantech.membersmanager.views.CircleImageView
                    android:id="@+id/imgAvataDetailHot"
                    android:layout_width="@dimen/circleImageview.width.height"
                    android:layout_height="@dimen/circleImageview.width.height"
                    android:src="@drawable/p1" />
                <ImageView
                    android:id="@+id/imgHotHeader"
                    android:layout_width="@dimen/imagehot.width.height"
                    android:layout_height="@dimen/imagehot.width.height"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/imagehot.magin"
                    android:src="@drawable/ic_hot" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/rl.maginleft.detail"
                    android:layout_toRightOf="@+id/imgAvataDetailHot">

                    <TextView
                        android:id="@+id/tvSenderDetailHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color.black" />

                    <TextView
                        android:id="@+id/tvTimeDetailHot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSenderDetailHot"
                        android:textSize="@dimen/text.size.12sp"
                        android:textStyle="italic" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/tvTittleDetailHot"
                android:textStyle="bold"
                android:textSize="@dimen/button.textsize.16sp"
                android:textColor="@color/color.black"
                android:layout_marginTop="@dimen/tv.magintop.content"/>
            <TextView
                android:id="@+id/tvContentDetailHot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv.magintop.content" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>