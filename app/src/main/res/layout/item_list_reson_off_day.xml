<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/linearlayout.padding.10dp">

        <CheckBox
            android:id="@+id/cbChoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_check_box" />

        <TextView
            android:id="@+id/tvReson"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/drawerfragment.rl.padding"
            android:layout_marginStart="@dimen/drawerfragment.rl.padding"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="2"
            android:text="@string/test_reson"
            android:textSize="@dimen/textsize.14sp" />
    </LinearLayout>
</LinearLayout>