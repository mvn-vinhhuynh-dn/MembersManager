<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlTittle"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:id="@+id/tvTittleDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sadasd"
                    android:textColor="@color/color.black"
                    android:textSize="25sp" />

                <ImageView
                    android:id="@+id/imgFavoriteDetail"
                    android:layout_width="@dimen/imageview.marginbottom.30dp"
                    android:layout_height="@dimen/imageview.marginbottom.30dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_favorite" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/view.height.1dp"
                    android:layout_alignParentBottom="true"
                    android:background="#ccc" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <com.asiantech.membersmanager.utils.CircleImageView
                    android:id="@+id/imgAvataDetail"
                    android:layout_width="@dimen/circleImageview.width.height"
                    android:layout_height="@dimen/circleImageview.width.height"
                    android:src="@drawable/p1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/imgAvataDetail">

                    <TextView
                        android:id="@+id/tvSenderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Le Xuan Phu"
                        android:textColor="@color/color.black" />

                    <TextView
                        android:id="@+id/tvTimeDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSenderDetail"
                        android:text="14:46, 07/10"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvXemchitiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTimeDetail"
                        android:text="Xem chi tiết..."
                        android:textColor="@color/color.blue"
                        android:textSize="12sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvAnxemchitiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTimeDetail"
                        android:text="Ẩn xem chi tiết..."
                        android:textColor="@color/color.blue"
                        android:textSize="12sp"
                        android:textStyle="italic"
                        android:visibility="invisible" />

                    <RelativeLayout
                        android:id="@+id/rlXemchitiet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvXemchitiet"
                        android:layout_marginTop="5dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvTu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Từ:     "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvMailSenderDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tvTu"
                            android:text="news@gmail.com"
                            android:textColor="@color/color.blue"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvToi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvTu"
                            android:text="Tới:     "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvMailReceiveDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMailSenderDetail"
                            android:layout_toRightOf="@+id/tvToi"
                            android:text="news@gmail.com"
                            android:textColor="@color/color.blue"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvNgay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvToi"
                            android:text="Ngày:   "
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvTimeDetail1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMailReceiveDetail"
                            android:layout_toRightOf="@+id/tvNgay"
                            android:text="14:05, 07 thag 10, 2015"
                            android:textSize="12sp" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvContentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="noi dung thu" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>