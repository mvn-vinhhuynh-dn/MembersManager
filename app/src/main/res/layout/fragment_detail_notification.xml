<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/ll.magin"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rl.magintop.detail">

                <com.asiantech.membersmanager.views.CircleImageView
                    android:id="@+id/imgAvataDetail"
                    android:layout_width="@dimen/circleImageview.width.height"
                    android:layout_height="@dimen/circleImageview.width.height"
                    android:src="@drawable/p1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/rl.maginleft.detail"
                    android:layout_toRightOf="@+id/imgAvataDetail">

                    <TextView
                        android:id="@+id/tvSenderDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color.black" />

                    <TextView
                        android:id="@+id/tvTimeDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSenderDetail"
                        android:textSize="@dimen/text.size.12sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTimeDetail"
                        android:textColor="@color/color.blue"
                        android:text="@string/tv.ViewDetails"
                        android:textSize="@dimen/text.size.12sp"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tvInviViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTimeDetail"
                        android:textColor="@color/color.blue"
                        android:textSize="@dimen/text.size.12sp"
                        android:textStyle="italic"
                        android:visibility="invisible"
                        android:text="@string/tv.inviViewDetails"/>

                    <RelativeLayout
                        android:id="@+id/rlViewDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvViewDetails"
                        android:layout_marginTop="@dimen/rl.magintop.detail.viewdetail"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tvFrom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tv.from"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvMailSenderDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/tvFrom"
                            android:text="@string/tv.mail"
                            android:textColor="@color/color.blue"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvTo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvFrom"
                            android:text="@string/tv.to"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvMailReceiveDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMailSenderDetail"
                            android:layout_toRightOf="@+id/tvTo"
                            android:text="@string/tv.mail"
                            android:textColor="@color/color.blue"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvTo"
                            android:text="@string/tv.date"
                            android:textSize="@dimen/text.size.12sp" />

                        <TextView
                            android:id="@+id/tvTimeDetail1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvMailReceiveDetail"
                            android:layout_toRightOf="@+id/tvDate"
                            android:textSize="@dimen/text.size.12sp" />

                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvContentDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/tv.magintop.content" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>