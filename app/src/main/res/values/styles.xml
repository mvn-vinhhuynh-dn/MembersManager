<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="linearlayout_contains_edittext_1">
        <item name="android:layout_marginBottom">@dimen/linearlayout.marginbottom.10dp</item>
        <item name="android:layout_marginLeft">@dimen/linearlayout.margin.40dp</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.margin.40dp</item>
        <item name="android:background">@color/linearlayout.background.edittext</item>
        <item name="android:padding">@dimen/linearlayout.padding.4dp</item>
    </style>

    <style name="button_sign_in">
        <item name="android:layout_marginLeft">@dimen/linearlayout.margin.40dp</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.margin.40dp</item>
        <item name="android:background">@drawable/selector_btn_login</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button.textsize.16sp</item>
    </style>

    <style name="linearlayout_contains_edittext_2">
        <item name="android:layout_marginBottom">@dimen/linearlayout.marginbottom.10dp</item>
        <item name="android:layout_marginLeft">@dimen/linearlayout.margin.30dp</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.margin.30dp</item>
        <item name="android:background">@color/linearlayout.background.edittext</item>
        <item name="android:padding">@dimen/linearlayout.padding.4dp</item>
    </style>

    <style name="edittext_login">
        <item name="android:textCursorDrawable" tools:targetApi="honeycomb_mr1">
            @drawable/cursor_white
        </item>
        <item name="android:layout_marginLeft">@dimen/edittext.paddingleft.4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/edittext.textsize.16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/edittext.textcolorhint.login</item>
    </style>

    <style name="button_forgot_sign_up">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button.textsize.14sp</item>
    </style>

    <style name="view_line_register">
        <item name="android:layout_marginBottom">@dimen/view.marginbottom.10dp</item>
    </style>

    <style name="button_register">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">@dimen/view.marginbottom.10dp</item>
    </style>

    <style name="DialogShowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/slide_dialog_down</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base" />

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>

    </style>

    <style name="text_size_title">
        <item name="android:textSize">@dimen/button.textsize.18sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="text_size_content">
        <item name="android:textColor">@color/text_profile</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/button.textsize.20sp</item>
    </style>
</resources>
