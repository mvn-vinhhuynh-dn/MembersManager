<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="linearlayout_contains_edittext_1">
        <item name="android:layout_marginBottom">@dimen/linearlayout.marginbottom.10dp</item>
        <item name="android:layout_marginLeft">@dimen/linearlayout.margin.40dp</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.margin.40dp</item>
        <item name="android:background">@color/linearlayout.background.edittext</item>
        <item name="android:padding">@dimen/linearlayout.padding.4dp</item>
    </style>

    <style name="button_sign_in">
        <item name="android:layout_marginLeft">@dimen/linearlayout.margin.40dp</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.margin.40dp</item>
        <item name="android:background">@drawable/selector_btn_login</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button.textsize.16sp</item>
    </style>

    <style name="button_reset_pass">
        <item name="android:layout_marginLeft">@dimen/linearlayout.margin.40dp</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.margin.40dp</item>
        <item name="android:background">@drawable/selector_btn_login</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button.textsize.16sp</item>
    </style>

    <style name="linearlayout_contains_edittext_2">
        <item name="android:layout_marginBottom">@dimen/linearlayout.marginbottom.10dp</item>
        <item name="android:layout_marginLeft">@dimen/linearlayout.margin.30dp</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.margin.30dp</item>
        <item name="android:background">@color/linearlayout.background.edittext</item>
        <item name="android:padding">@dimen/linearlayout.padding.4dp</item>
    </style>

    <style name="edittext_login">
        <item name="android:textCursorDrawable" tools:targetApi="honeycomb_mr1">
            @drawable/cursor_white
        </item>
        <item name="android:layout_marginLeft">@dimen/edittext.paddingleft.4dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">@dimen/edittext.textsize.16sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/edittext.textcolorhint.login</item>
    </style>

    <style name="button_forgot_sign_up">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps" tools:targetApi="ice_cream_sandwich">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button.textsize.14sp</item>
    </style>

    <style name="view_line_register">
        <item name="android:layout_marginBottom">@dimen/view.marginbottom.10dp</item>
    </style>

    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#e8edeb</item>
    </style>

    <style name="tv_datetime_vacation_day">
        <item name="android:textSize">@dimen/button.textsize.16sp</item>
        <item name="android:textColor">@color/color.black</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/linearlayout.padding.4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/bg_text_view</item>
        <item name="android:layout_height">@dimen/linearlayout.width</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="radiobutton_choose_reason">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">@dimen/textsize.14sp</item>
        <item name="android:textColor">@color/radiobutton_text_color</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/nav_drawer_height</item>
    </style>

    <style name="button_register">
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">@dimen/view.marginbottom.10dp</item>
    </style>

    <style name="DialogShowAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_dialog_up</item>
        <item name="android:windowExitAnimation">@anim/slide_dialog_down</item>
    </style>

    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base" />

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/windowBackground</item>
    </style>

    <style name="tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/ln.padding10</item>
        <item name="android:textSize">@dimen/text.size.12sp</item>
    </style>

    <style name="edt_edit_profile">
        <item name="android:hint">""</item>
        <item name="android:layout_marginRight">@dimen/linearlayout.marginbottom.5dp</item>
        <item name="android:paddingLeft">@dimen/linearlayout.padding.4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/textview.margintop.30dp</item>
        <item name="android:textColor">@color/mdtp_dark_gray</item>
        <item name="android:textSize">@dimen/textsize.16sp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:background">@drawable/bg_edt_edit_profile_normal</item>
    </style>

    <style name="tv_info_profile">
        <item name="android:textSize">@dimen/textsize.16sp</item>
        <item name="android:textColor">@color/mdtp_dark_gray</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/linearlayout.padding.4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/textview.margintop.30dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="img_info_profile">
        <item name="android:contentDescription">""</item>
        <item name="android:layout_marginLeft">@dimen/linearlayout.padding.10dp</item>
        <item name="android:layout_height">@dimen/linearlayout.padding.30dp</item>
        <item name="android:layout_width">@dimen/linearlayout.padding.30dp</item>
    </style>

    <style name="tv_title_profile">
        <item name="android:textColor">@color/bg_view_profile</item>
        <item name="android:layout_width">wrap_content</item>'
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/button.textsize.18sp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/imageview.marginbottom.10dp</item>
    </style>

    <style name="rl_info_profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textview.margintop.30dp</item>
        <item name="android:layout_marginBottom">@dimen/linearlayout.marginbottom.5dp</item>
        <item name="android:layout_marginLeft">@dimen/linearlayout.height.30dp</item>
        <item name="android:layout_marginTop">@dimen/linearlayout.marginbottom.5dp</item>
    </style>

    <style name="view_profile_show_info">
        <item name="android:background">@color/bg_view_profile</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">@dimen/linearlayout.padding.10dp</item>
        <item name="android:layout_marginTop">@dimen/linearlayout.padding.10dp</item>
    </style>
</resources>
